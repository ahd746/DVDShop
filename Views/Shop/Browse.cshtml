@model IEnumerable<DVDShop.Models.Product>

@{
    ViewData["Title"] = "Browse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Buy Movie</h1>
<h3>Choose you favourite @ViewBag.Category.ToLower() movie</h3>

<section>
    <div class="row mt-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 mb-3">
                <div class="card mb-3 text-center h-75">
                    <div class="card-body">
                        <a asp-controller="Shop" asp-action="ProductDetails" asp-route-product="@item.Name">@item.Name</a>
                        <h5>@String.Format("{0:c}", item.Price)</h5>
                    </div>
                </div>
            </div>

        }
    </div>
</section>