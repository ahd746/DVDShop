@model IEnumerable<DVDShop.Models.Category>

@{
    ViewData["Title"] = "Shopping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Buy Movie</h1>
<h3>Choose you favourite movie category</h3>

<section>
    <div class="row mt-3">
        @foreach (var item in Model)
        {
        <div class="col-lg-4 mb-3">
            <div class="card mb-3 text-center h-75" >
                <div class="card-body">
                    <a asp-controller="Shop" asp-action="Browse" asp-route-category="@item.Name" >@item.Name</a>
                </div>
            </div>
        </div>

        }
    </div>
</section>
